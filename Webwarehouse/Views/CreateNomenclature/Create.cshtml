@model Nomenclature

@{
    ViewData["Title"] = "CreateNomenclature";
}
<div class="text-center">
    <h3 class="display-4">Создать номенклатуру</h3>
</div>

<form asp-action="Create" method="post">

    <div align="center">
        <label asp-for="Name">Номенклатура</label>
        <div>
            <input asp-for="Name" class="form-control" style="margin:10px" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
    </div>

    <div align="center">
        <label asp-for="Count">Количество</label>
        <div>
            <input asp-for="Count" class="form-control" style="margin:10px" />
            <span asp-validation-for="Count" class="text-danger"></span>
        </div>
    </div>


    <p align="center">
        <input type="submit" value="Создать" style="margin:10px" />
    </p>
</form>

<script src="https://ajax.aspnetcdn.com/ajax/jQuery/jquery-3.5.1.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validate/1.17.0/jquery.validate.min.js"></script>
<script src="https://ajax.aspnetcdn.com/ajax/jquery.validation.unobtrusive/3.2.10/jquery.validate.unobtrusive.min.js"></script>
